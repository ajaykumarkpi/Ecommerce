<h1>Edit Product</h1>

<%= form_with(model: @product, url: product_path(@product), method: :patch) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :description %>
  <%= form.text_area :description %>

  <%= form.label :price %>
  <%= form.number_field :price %>

  <%= form.submit "Update Product" %>
<% end %>
